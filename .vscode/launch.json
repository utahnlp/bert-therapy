{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "type": "pickString",
            "id": "MODEL",
            "description": "What Model?",
            "options": [
            "bert-base-cased",
            "roberta-base",
            "google/bert_uncased_L-2_H-128_A-2"
            ],
            "default": "google/bert_uncased_L-2_H-128_A-2"
        },
        {
            "type": "pickString",
            "id": "TASK",
            "description": "What Task?",
            "options": [
            "utter",
            ],
            "default": "utter"
        },
    ],
    "configurations": [
        {
            "name": "Generate Data",
            "type": "python",
            "request": "launch",
            "program": "modules/processors/${input:TASK}.py",
            "console": "integratedTerminal",
            "args": ["${input:MODEL}", "data/dev.json", "data/test.json", "data/train.json"]
        },
        {
            "name": "Run Classifier",
            "type": "python",
            "request": "launch",
            "program": "modules/run_classifier.py",
            "console": "integratedTerminal",
            "args": [
                "--model_name_or_path", "${input:MODEL}",
                "--copy_sep",
                "--task_name", "${input:TASK}",
                "--no_pad_to_max_length" ,
                "--train_file", "./generated_data/${input:MODEL}/${input:TASK}/train.csv" ,
                "--validation_file", "./generated_data/${input:MODEL}/${input:TASK}/dev.csv" ,
                "--output_dir", "./output/${input:MODEL}/${input:TASK}/" ,
                "--do_train" ,
                "--do_eval" ,
                "--fp16",
                "--per_device_train_batch_size", "32" ,
                "--adafactor",
                "--group_by_length",
                "--learning_rate", "4e-4",
                "--save_total_limit", "4",
                "--warmup_steps", "1000" ,
                "--save_steps", "2000",
                "--weight_decay", "0.1" ,
                "--num_train_epochs", "10" 
            ]
        }
    ]
}
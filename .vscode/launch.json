{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "type": "pickString",
            "id": "MODEL",
            "description": "What Model?",
            "options": [
                "bert-base-uncased",
                "google/bert_uncased_L-2_H-128_A-2",
                "TODBERT/TOD-BERT-JNT-V1",
                "roberta-large",
                "roberta-base",
            ],
            "default": "bert-base-uncased"
        },
        {
            "type": "pickString",
            "id": "TASK",
            "description": "What Task?",
            "options": [
                "utter",
                "concat",
                "sep",
                "speaker",
                "speaker_span"
            ],
            "default": "speaker_span"
        },
        {
            "type": "pickString",
            "id": "CHECKPOINT",
            "description": "Best checkpoint?",
            "options": [
                "2000",
                "4000",
                "6000",
                "8000",
                "10000",
            ],
            "default": "4000"
        },
    ],
    "configurations": [
        {
            "name": "Generate Data",
            "type": "python",
            "request": "launch",
            "program": "modules/processors/${input:TASK}.py",
            "console": "integratedTerminal",
            "args": ["${input:MODEL}", "data/dev.json", "data/test.json", "data/train.json"]
        },
        {
            "name": "Run Classifier",
            "type": "python",
            "request": "launch",
            "program": "modules/run_classifier.py",
            "console": "integratedTerminal",
            "args": [
                "--model_name_or_path", "${input:MODEL}",
                "--copy_sep",
                "--task_name", "${input:TASK}",
                "--train_file", "./generated_data/${input:MODEL}/${input:TASK}/train.csv" ,
                "--validation_file", "./generated_data/${input:MODEL}/${input:TASK}/dev.csv" ,
                "--output_dir", "./output/${input:MODEL}/${input:TASK}/" ,
                "--do_train" ,
                "--do_eval" ,
                "--fp16",
                "--per_device_train_batch_size", "64" ,
                "--adafactor",
                "--group_by_length",
                "--learning_rate", "2e-5",
                "--save_total_limit", "4",
                "--warmup_steps", "1000" ,
                "--weight_decay", "0.1" ,
                "--num_train_epochs", "7",
                "--load_best_model_at_end",
                "--eval_steps", "2000",
                "--evaluation_strategy", "steps",
                "--metric_for_best_model", "f1_macro",
                "--label_smoothing_factor", "0.1",
                "--overwrite_output_dir"
            ]
        },
        {
            "name": "Run Inference",
            "type": "python",
            "request": "launch",
            "program": "modules/run_classifier.py",
            "console": "integratedTerminal",
            "args": [
                "--model_name_or_path", "output/${input:MODEL}/${input:TASK}/checkpoint-${input:CHECKPOINT}",
                "--task_name", "${input:TASK}",
                "--train_file", "./generated_data/${input:MODEL}/${input:TASK}/train.csv",
                "--validation_file", "./generated_data/${input:MODEL}/${input:TASK}/dev.csv",
                "--test_file", "./generated_data/${input:MODEL}/${input:TASK}/test.csv",
                "--output_dir", "./output/${input:MODEL}/${input:TASK}/checkpoint-${input:CHECKPOINT}",
                "--per_device_eval_batch_size", "128",
                "--do_predict", 
                "--fp16", 
                "--label_smoothing_factor", "0.1"
            ]
        }
    ]
}